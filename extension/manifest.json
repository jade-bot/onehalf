{
  "name": "1/2",
  "version": "0.3",
  "description": "Browser Sync",
  "background_page": "background_page.html",
  "icons": {
    "128": "logo.png",
    "16": "logo.png",
    "48": "logo.png"
  },
  "permissions": [
    "tabs",
    "http://*/*"
  ],
  "browser_action": {
    "default_icon": "enable.png",
    "default_title": "もっとひっついてたいのさ"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/frontend.js"],
      "run_at": "document_start"
    }
  ],
  "update_url": "http://onehalf.libelabo.jp/updates.xml"
}
